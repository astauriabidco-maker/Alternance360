generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tenant {
  id               String           @id @default(uuid())
  name             String
  logoUrl          String?
  primaryColor     String?          @default("#4f46e5")
  siret            String?          @unique
  address          String?
  ndaNumber        String?
  uaiCode          String?
  qualiopiCert     Boolean          @default(false)
  legalRep         String?
  contactEmail     String?
  contactPhone     String?
  website          String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  webhookUrl       String?
  webhookSecret    String?
  auditSessions    AuditSession[]
  blocsCompetences BlocCompetence[]
  competences      Competence[]
  contracts        Contract[]
  livrets          Livret[]
  referentiels     Referentiel[]
  roles            Role[]
  subscription     Subscription?
  supportTickets   SupportTicket[]
  trainingOffers   TrainingOffer[]
  users            User[]
  apiKeys          ApiKey[]
}

model User {
  id                   String                 @id @default(uuid())
  email                String                 @unique
  password             String?
  fullName             String?
  firstName            String?
  lastName             String?
  phone                String?
  companyName          String?
  tutorName            String?
  role                 String                 @default("apprentice")
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  externalId           String?                @unique
  tenantId             String?
  roleId               String?
  activities           Activity[]
  contractsManaged     Contract[]             @relation("FormateurContracts")
  contracts            Contract[]             @relation("ApprenticeContracts")
  evaluationsReceived  EvaluationIndicateur[] @relation("ApprenticeEvaluations")
  evaluationsValidated EvaluationIndicateur[] @relation("TutorEvaluations")
  reportsGenerated     HistoricalReport[]
  initialAssessments   InitialAssessment[]
  notifications        NotificationLog[]
  positionings         Positioning[]
  proofs               Proof[]
  comments             ProofComment[]
  ticketsAssigned      SupportTicket[]        @relation("TicketAssignee")
  ticketsCreated       TicketMessage[]
  customRole           Role?                  @relation(fields: [roleId], references: [id])
  tenant               Tenant?                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Referentiel {
  id                 String           @id @default(uuid())
  codeRncp           String
  title              String
  isGlobal           Boolean          @default(false)
  createdAt          DateTime         @default(now())
  author             String?
  downloadCount      Int              @default(0)
  certificationLevel String?
  tenantId           String?
  domain             String?
  blocs              BlocCompetence[]
  contracts          Contract[]
  tenant             Tenant?          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  trainingOffers     TrainingOffer[]
}

model BlocCompetence {
  id            String       @id @default(uuid())
  title         String
  orderIndex    Int          @default(0)
  createdAt     DateTime     @default(now())
  tenantId      String?
  referentielId String
  referentiel   Referentiel  @relation(fields: [referentielId], references: [id], onDelete: Cascade)
  tenant        Tenant?      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  competences   Competence[]
}

model Competence {
  id           String         @id @default(uuid())
  description  String
  createdAt    DateTime       @default(now())
  tenantId     String?
  blocId       String
  bloc         BlocCompetence @relation(fields: [blocId], references: [id], onDelete: Cascade)
  tenant       Tenant?        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  indicateurs  Indicateur[]
  positionings Positioning[]
  proofs       Proof[]
  tsfMappings  TSFMapping[]
}

model Indicateur {
  id           String                 @id @default(uuid())
  description  String
  createdAt    DateTime               @default(now())
  competenceId String
  evaluations  EvaluationIndicateur[]
  competence   Competence             @relation(fields: [competenceId], references: [id], onDelete: Cascade)
}

model EvaluationIndicateur {
  id            String     @id @default(uuid())
  status        String     @default("PENDING")
  comment       String?
  isSigned      Boolean    @default(false)
  signedAt      DateTime?
  signatureData String?
  checkedAt     DateTime?
  validatorId   String?
  apprenticeId  String?
  contractId    String
  indicateurId  String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  indicateur    Indicateur @relation(fields: [indicateurId], references: [id], onDelete: Cascade)
  contract      Contract   @relation(fields: [contractId], references: [id], onDelete: Cascade)
  apprentice    User?      @relation("ApprenticeEvaluations", fields: [apprenticeId], references: [id])
  validator     User?      @relation("TutorEvaluations", fields: [validatorId], references: [id])

  @@unique([contractId, indicateurId])
  @@index([apprenticeId])
  @@index([validatorId])
  @@index([indicateurId])
}

model Contract {
  id                 String                 @id @default(uuid())
  startDate          DateTime
  endDate            DateTime
  tutorSignature     String?
  signedAt           DateTime?
  createdAt          DateTime               @default(now())
  tenantId           String
  referentielId      String?
  userId             String?
  formateurId        String?
  versionId          String?
  periodType         String?                @default("SEMESTER")
  tsfStatus          String                 @default("DRAFT")
  isLocked           Boolean                @default(false)
  lockedAt           DateTime?
  changeLog          String?
  externalId         String?                @unique
  attendance         Attendance[]
  formateur          User?                  @relation("FormateurContracts", fields: [formateurId], references: [id])
  user               User?                  @relation("ApprenticeContracts", fields: [userId], references: [id], onDelete: Cascade)
  referentiel        Referentiel?           @relation(fields: [referentielId], references: [id], onDelete: Cascade)
  tenant             Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tsfEvaluations     EvaluationIndicateur[]
  reports            HistoricalReport[]
  initialAssessments InitialAssessment[]
  livrets            Livret[]
  milestones         Milestone[]
  periodes           Period[]
  tsfMapping         TSFMapping[]
}

model Period {
  id          String       @id @default(uuid())
  label       String
  startDate   DateTime
  endDate     DateTime
  orderIndex  Int
  createdAt   DateTime     @default(now())
  contractId  String
  contract    Contract     @relation(fields: [contractId], references: [id], onDelete: Cascade)
  tsfMappings TSFMapping[]
}

model TSFMapping {
  id                    String     @id @default(uuid())
  plannedStart          DateTime?
  plannedEnd            DateTime?
  lieu                  String?
  status                String     @default("PENDING")
  flagCfa               Boolean    @default(false)
  flagEntreprise        Boolean    @default(false)
  createdAt             DateTime   @default(now())
  contractId            String
  competenceId          String
  periodId              String?
  blocTitle             String?
  competenceDescription String?
  versionId             String?
  period                Period?    @relation(fields: [periodId], references: [id], onDelete: Cascade)
  competence            Competence @relation(fields: [competenceId], references: [id], onDelete: Cascade)
  contract              Contract   @relation(fields: [contractId], references: [id], onDelete: Cascade)

  @@unique([contractId, competenceId, periodId])
}

model HistoricalReport {
  id               String   @id @default(uuid())
  type             String
  periodLabel      String
  generatedAt      DateTime @default(now())
  data             String
  verificationHash String
  contractId       String
  authorId         String?
  author           User?    @relation(fields: [authorId], references: [id])
  contract         Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
}

model InitialAssessment {
  id           String        @id @default(uuid())
  status       String        @default("DRAFT")
  submittedAt  DateTime?
  validatedAt  DateTime?
  createdAt    DateTime      @default(now())
  userId       String
  contractId   String?
  validatorId  String?
  contract     Contract?     @relation(fields: [contractId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  positionings Positioning[]
}

model Positioning {
  id           String             @id @default(uuid())
  levelInitial Int
  targetLevel  Int?
  createdAt    DateTime           @default(now())
  assessmentId String?
  userId       String
  competenceId String
  competence   Competence         @relation(fields: [competenceId], references: [id], onDelete: Cascade)
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  assessment   InitialAssessment? @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
}

model Proof {
  id           String         @id @default(uuid())
  title        String
  description  String?
  type         String
  url          String
  status       String         @default("PENDING")
  feedback     String?
  createdAt    DateTime       @default(now())
  userId       String
  competenceId String?
  competence   Competence?    @relation(fields: [competenceId], references: [id])
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments     ProofComment[]
}

model ProofComment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  proofId   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  proof     Proof    @relation(fields: [proofId], references: [id], onDelete: Cascade)
}

model Milestone {
  id             String    @id @default(uuid())
  type           String
  label          String
  dueDate        DateTime
  status         String    @default("PENDING")
  completionNote String?
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  contractId     String
  contract       Contract  @relation(fields: [contractId], references: [id], onDelete: Cascade)
}

model Attendance {
  id         String   @id @default(uuid())
  date       DateTime
  hours      Float
  status     String
  type       String   @default("CFA")
  createdAt  DateTime @default(now())
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
}

model NotificationLog {
  id          String   @id @default(uuid())
  type        String
  recipientId String
  title       String
  content     String
  metadata    String?
  sentAt      DateTime @default(now())
  recipient   User     @relation(fields: [recipientId], references: [id])
}

model Activity {
  id          String    @id @default(uuid())
  title       String
  description String?
  date        DateTime?
  createdAt   DateTime  @default(now())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Livret {
  id          String   @id @default(uuid())
  documentId  String   @unique
  filePath    String
  status      String   @default("GENERATED")
  generatedAt DateTime @default(now())
  signedAt    DateTime?
  contractId  String
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  contract    Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
}

model Lead {
  id              String         @id @default(uuid())
  email           String
  source          String?        @default("landing_page")
  tenantName      String?
  status          String         @default("PENDING")
  processedAt     DateTime?
  createdAt       DateTime       @default(now())
  trainingOfferId String?
  trainingOffer   TrainingOffer? @relation(fields: [trainingOfferId], references: [id])
}

model TrainingOffer {
  id            String      @id @default(uuid())
  title         String
  description   String?
  status        String      @default("DRAFT")
  price         Float
  funding       String?
  startDate     DateTime
  endDate       DateTime
  duration      Int
  campus        String?
  seats         Int?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  tenantId      String
  referentielId String
  leads         Lead[]
  referentiel   Referentiel @relation(fields: [referentielId], references: [id], onDelete: Cascade)
  tenant        Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  entityType String?
  entityId   String?
  actorId    String
  tenantId   String?
  details    String?
  createdAt  DateTime @default(now())
}

model PlatformConfig {
  key         String   @id
  value       String
  description String?
  group       String   @default("GENERAL")
  isSecret    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
}

model Subscription {
  id        String    @id @default(uuid())
  plan      String    @default("ESSENTIAL")
  status    String    @default("ACTIVE")
  startDate DateTime  @default(now())
  endDate   DateTime?
  tenantId  String    @unique
  invoices  Invoice[]
  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Invoice {
  id             String       @id @default(uuid())
  amount         Float
  status         String       @default("PAID")
  dueDate        DateTime
  paidAt         DateTime?
  pdfUrl         String?
  createdAt      DateTime     @default(now())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
}

model AuditSession {
  id         String           @id @default(uuid())
  token      String           @unique
  scope      String
  expiresAt  DateTime
  tenantId   String
  createdBy  String
  createdAt  DateTime         @default(now())
  accessLogs AuditAccessLog[]
  tenant     Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model ArchiveVault {
  id              String   @id @default(uuid())
  apprenticeName  String
  contractRef     String   @unique
  tenantId        String
  finalPdfUrl     String
  fullHistoryJson String
  archivedAt      DateTime @default(now())
  purgeDate       DateTime

  @@index([tenantId])
  @@index([purgeDate])
}

model AuditAccessLog {
  id         String       @id @default(uuid())
  resource   String
  details    String?
  accessedAt DateTime     @default(now())
  sessionId  String
  session    AuditSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Role {
  id          String   @id @default(uuid())
  name        String
  description String?
  permissions String
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  users       User[]

  @@unique([tenantId, name])
}

model SupportTicket {
  id           String          @id @default(uuid())
  subject      String
  status       String          @default("OPEN")
  priority     String          @default("MEDIUM")
  category     String          @default("GENERAL")
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  tenantId     String
  assignedToId String?
  assignedTo   User?           @relation("TicketAssignee", fields: [assignedToId], references: [id])
  tenant       Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  messages     TicketMessage[]
}

model TicketMessage {
  id        String        @id @default(uuid())
  content   String
  createdAt DateTime      @default(now())
  ticketId  String
  authorId  String
  author    User          @relation(fields: [authorId], references: [id])
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

model ApiKey {
  id        String    @id @default(uuid())
  name      String
  keyHash   String    @unique
  prefix    String
  lastUsed  DateTime?
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}
